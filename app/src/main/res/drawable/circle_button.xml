<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape android:shape="oval">
                    <corners android:radius="2dp" />
                    <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
                    <solid android:color="#EBEBEB" />
                </shape>
            </item>

        </layer-list>
    </item>
    <!-- Pressed state is handled by common_google_signin_btn_tint -->
    <item android:state_pressed="true">

        <layer-list>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="oval">
                    <!-- Explicit transparent fill to avoid GB filling with the stroke colour -->
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="8dp" android:color="#4D4284F2" />
                </shape>
            </item>
            <item>
                <layer-list>

                    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                        <shape android:shape="oval">
                            <corners android:radius="2dp" />
                            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
                            <solid android:color="#EBEBEB" />
                        </shape>
                    </item>


                </layer-list>

            </item>
        </layer-list>

    </item>
    <item>
        <layer-list>

            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape android:shape="oval">
                    <corners android:radius="2dp" />
                    <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
                    <solid android:color="#FFFFFF" />
                </shape>
            </item>

        </layer-list>

    </item>
</selector>
